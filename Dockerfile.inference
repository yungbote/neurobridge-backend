# Build stage
FROM golang:1.24-alpine AS build

RUN apk add --no-cache git ca-certificates && update-ca-certificates
WORKDIR /src

COPY go.mod go.sum ./
RUN go mod download

COPY . ./

RUN CGO_ENABLED=0 go build -ldflags="-s -w" -o /src/inference ./cmd/inference

# Runtime stage
FROM gcr.io/distroless/base-debian12

WORKDIR /app
COPY --from=build /src/inference /app/inference

EXPOSE 8080
ENTRYPOINT ["/app/inference"]

