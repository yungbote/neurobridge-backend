{
  "type": "object",
  "properties": {
    "schema_version": { "type": "integer", "const": 1 },
    "videos": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "semantic_type": {
            "type": "string",
            "enum": [
              "real_world_demo",
              "process_animation",
              "intuition_animation",
              "spatial_walkthrough",
              "before_after"
            ]
          },
          "prompt": { "type": "string" },
          "caption": { "type": "string" },
          "alt_text": { "type": "string" },
          "placement_hint": { "type": "string" },
          "duration_sec": { "type": "integer" },
          "citations": { "type": "array", "items": { "type": "string" } }
        },
        "required": [
          "semantic_type",
          "prompt",
          "caption",
          "alt_text",
          "placement_hint",
          "duration_sec",
          "citations"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["schema_version", "videos"],
  "additionalProperties": false
}
