{
  "type": "object",
  "properties": {
    "schema_version": { "type": "integer", "const": 2 },
    "videos": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "semantic_type": {
            "type": "string",
            "enum": [
              "real_world_demo",
              "process_animation",
              "intuition_animation",
              "spatial_walkthrough",
              "before_after"
            ]
          },
          "prompt": { "type": "string" },
          "caption": { "type": "string" },
          "alt_text": { "type": "string" },
          "placement_hint": { "type": "string" },
          "duration_sec": { "type": "integer" },
          "citations": { "type": "array", "items": { "type": "string" } },
          "storyboard": {
            "type": "object",
            "properties": {
              "total_duration_sec": { "type": "integer" },
              "max_clip_duration_sec": { "type": "integer" },
              "clips": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "clip_index": { "type": "integer" },
                    "duration_sec": { "type": "integer", "enum": [4, 8, 12] },
                    "prompt": { "type": "string" },
                    "beats": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "start_sec": { "type": "integer" },
                          "end_sec": { "type": "integer" },
                          "visual": { "type": "string" },
                          "on_screen_text": { "type": "string" },
                          "camera": { "type": "string" },
                          "transition": { "type": "string" }
                        },
                        "required": [
                          "start_sec",
                          "end_sec",
                          "visual",
                          "on_screen_text",
                          "camera",
                          "transition"
                        ],
                        "additionalProperties": false
                      }
                    }
                  },
                  "required": ["clip_index", "duration_sec", "prompt", "beats"],
                  "additionalProperties": false
                }
              }
            },
            "required": ["total_duration_sec", "max_clip_duration_sec", "clips"],
            "additionalProperties": false
          }
        },
        "required": [
          "semantic_type",
          "prompt",
          "caption",
          "alt_text",
          "placement_hint",
          "duration_sec",
          "citations",
          "storyboard"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["schema_version", "videos"],
  "additionalProperties": false
}

